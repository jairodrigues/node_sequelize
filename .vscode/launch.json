  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/src/index.js",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "runtimeArgs": ["--nolazy"],
      "env": {
        "BABEL_ENV": "debug"
      }
    },
    {
      "name": "Run Mocha Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "${workspaceRoot}/src/api/v1/test/**/*.js",
        "--require",
        "babel-register",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors"
      ],
      "env": {
        "NODE_ENV": "development"
      }
      // "runtimeArgs": ["--nolazy"],
      // "sourceMaps": false
    }
  ]
  // }
  // NODE_ENV=test mocha --opts src/api/v1/test/mocha.opts src/api/v1/test/**/*.js"
}
